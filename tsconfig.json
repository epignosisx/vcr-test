{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",

  "include": ["src"],
  "exclude": ["vitest.config.mts"],

  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,

    "rootDir": "./src",
    "outDir": "./dist"
  }
}